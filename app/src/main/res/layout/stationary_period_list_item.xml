<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="120dp"
    android:padding="15dp"
    android:id="@+id/stationaryPeriodListItemParentLayout">

    <TextView
        android:id="@+id/stationaryStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/textView"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="-27dp"
        android:layout_marginStart="10dp"
        android:text="Start Time"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/stationaryEndTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/stationaryLongitude"
        android:layout_marginStart="50dp"
        android:gravity="center"
        android:text="End Time"
        android:textColor="#000" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/stationaryLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="113dp"
        android:layout_marginTop="27dp"
        android:text="TextView" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/stationaryLongitude"
        android:layout_alignTop="@+id/stationaryStartTime"
        android:text="Longitude" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/stationaryLatitude"
        android:layout_marginTop="20dp"
        android:text="Latitude" />

    <TextView
        android:id="@+id/stationaryLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView12"
        android:layout_marginEnd="45dp"
        android:layout_marginTop="15dp"
        android:text="TextView" />

</RelativeLayout>