<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="120dp"
    android:padding="15dp"
    android:id="@+id/stationaryPeriodListItemParentLayout">

    <TextView
        android:id="@+id/stationaryStartTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentStart="true"
        android:layout_marginBottom="-27dp"
        android:layout_marginStart="27dp"
        android:text="@string/start_time"
        android:textColor="#000"
        android:textSize="15sp" />

    <TextView
        android:id="@+id/stationaryEndTime"
        android:layout_width="72dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/divider"

        android:layout_alignParentStart="true"
        android:layout_marginStart="27dp"
        android:gravity="center"
        android:text="@string/end_time"
        android:textColor="#000" />

    <View
        android:id="@+id/divider"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="?android:attr/listDivider" />

    <TextView
        android:id="@+id/stationaryLongitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignStart="@+id/textView2"
        android:layout_alignTop="@+id/stationaryEndTime"
        android:text="@string/longitude" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/stationaryStartTime"
        android:layout_marginEnd="125dp"
        android:text="@string/longitude" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"

        android:layout_alignTop="@+id/stationaryStartTime"
        android:layout_marginEnd="38dp"
        android:text="@string/latitude" />

    <TextView
        android:id="@+id/stationaryLatitude"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/stationaryEndTime"
        android:layout_marginEnd="34dp"
        android:text="@string/latitude" />

</RelativeLayout>